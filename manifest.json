{
  "manifest_version": 2,
  "name": "Tab Saver",
  "version": "1.0",
  "description": "Save and all open tabs to the clipboard",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Tab Saver",
    "default_popup": "saver.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tab-saver@joemirizio.com",
      "strict_min_version": "57.0"
    }
  }
}